record(waveform, "$(P)IDX-I") {
    field(DTYP, "FLAME Index Orbit")
    field(INP , "@$(SIM) $(ENAME=marker) $(VECTOR=pos)") # "$(VECTOR=pos)" is required, but ignored
    field(FTVL, "DOUBLE")
    field(NELM, "$(NELM=10)")
    field(PINI, "YES")
}

